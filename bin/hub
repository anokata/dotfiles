#!/bin/bash

PATHS=~/doc:~/dotfiles:~/ydsk/doc/:~/ydsk/dotfiles

oldIFS=$IFS
export IFS=":"
for dir in $PATHS; do
  echo "$dir"
  echo '.-.'
done
export IFS=$oldIFS

if [ -d ~/doc ]; then
    cd ~/doc
    git add . && git commit -m "doc (autocommit)" 
    gitpush
fi

if [ -d ~/dotfiles ]; then
    cd ~/dotfiles
    git add . && git commit -m "(autocommit)" 
    gitpush
fi
