#!/bin/bash
# vim: filetype=sh
birthdate="Nov 11 1988"
now=$(date '+%b %d %Y')

datediff() {
    d1=$(date -d "$1" +%s)
    d2=$(date -d "$2" +%s)
    d=$(( (d1 - d2) / 86400 ))
    h=$(( (d1 - d2) / 3600 ))
    echo -e "Have a nice ${d}th day! (you lived ${h} hours)"
}

datediff "$now" "$birthdate"
