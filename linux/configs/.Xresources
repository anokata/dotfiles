! Fonts
Xft.dpi: 96
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! URxvt
*.font: xft:FiraCode-Regular:style=Regular:size=12
*.boldFont: xft:FiraCode:style=Bold:size=12
*.italicFont: xft:FiraCode:style=Italic:size=12
*.boldItalicFont: xft:FiraCode:style=Bold Italic:size=12
! URxvt.font: xft: Terminus: pixelsize = 14
! URxvt.boldFont: xft:scientifica:size=8:style=Bold
! URxvt.italicFont: xft:scientifica:size=8:style=Italic
URxvt.cursorUnderline: true
URxvt.internalBorder: 15
URxvt.letterSpace: 0
URxvt.perl-ext-common: default,matcher,font-size
URxvt.scrollBar: false
! rofi
! rofi.font: scientifica Regular 8
rofi.terminal: urxvtc
rofi.ssh-client: ssh
rofi.ssh-command: {terminal} -e {ssh-client} {host}

! Clickable URLs
URxvt.url-launcher: firefox
URxvt.matcher.button: 1

! Use Control-Shift-V/C for X clipboard
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Resizeable text
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease



! URxvt.font:                       xft:Fantasque Sans Mono:regular:size=15
*.foreground:   #c5c8c6
*.background:   #1d1f21
*.cursorColor:  #c5c8c6

