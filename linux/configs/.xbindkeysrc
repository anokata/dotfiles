# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    m:0x8 + c:64
    Alt + Alt_L 

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    m:0xc + c:34
    Control+Alt + bracketleft 

"timer"
    m:0x54 + c:96
    Control+Mod2+Mod4 + F12 

"timer"
    m:0x15 + c:96
    Control+Shift+Mod2 + F12 

# Alt+f12 printscreen all to file
"screenshot-all"
    m:0x18 + c:96
    Alt+Mod2 + F12 

# ctrl+f12 printscreen area to file
"screenshot-area"
    m:0x14 + c:96
    Control+Mod2 + F12 

#c-s-w-f12 screenshot to media dir
"screenshot-all-media"
    m:0x55 + c:96
    Control+Shift+Mod2+Mod4 + F12 

#c-w-f11 path image load to clip
"clipboard-path-load-image"
    m:0x54 + c:95
    Control+Mod2+Mod4 + F11 

