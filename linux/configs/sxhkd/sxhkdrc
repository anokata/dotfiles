##### Volume Control
#     pactl set-sink-volume 0 +5%
#     pactl set-sink-volume 0 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioLowerVolume
    volumectl -5%
    # amixer -D pulse sset Master 5%- unmute
XF86AudioRaiseVolume
    volumectl +5%
    # amixer -D pulse sset Master 5%+ unmute
#XF86AudioMute
#    amixer set Master toggle
ctrl + alt + {bracketleft, bracketright}
    amixer -D pulse sset Master 5%{-,+} unmute

#XF86AudioMicMute
    #pactl set-source-mute @DEFAULT_SOURCE@ toggle

#### Configs

# make sxhkd reload its configuration files:
super + ctrl + shift + s
    notify-send 'Reloading sxhkd configuration.';\
    pkill -USR1 -x sxhkd

# reload polybar
super + shift + ctrl + p
    killall polybar;\
    ~/.config/polybar/launch.sh &

# reload notification system
super + shift + ctrl + d
    notify-send 'Reloading notification system.';\
    killall dunst; dunst &

# reload xresources
super + shift + ctrl + x
    notify-send 'Reloading xresources';\
    xrdb "/home/$(whoami)/.Xresources"

### bspwm hotkeys

# quit/restart bspwm
super + ctrl + shift + {q,r}
	notify-send 'Restarting bspwm.';\
	bspc {quit,wm -r}

super + shift + e
    bspc quit 1

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + shift + m
	bspc desktop -l next

# alt + `
alt + Tab
    bspc node -f next.local.window
	# bspc node -f next.local

super + {j, k}
    bspc node -f {next,prev}.local.window
	# bspc node -f next

# focus to the given desktop
super + {1-9}
	bspc desktop -f '^{1-9,9}'

#ctrl + space;  {1-9}
	#bspc desktop -f '^{1-9,9}'

