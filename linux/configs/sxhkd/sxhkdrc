ctrl + super + m; {comma, period}
    ~/dotfiles/linux/bin/mpd-command {"seek +00:01:00", "seek -00:01:00"}
ctrl + super + shift + {less, greater}
    ~/dotfiles/linux/bin/mpd-command {"seek +00:05:00", "seek -00:05:00"}
    

ctrl + super + s
    ~/dotfiles/linux/bin/rofi-mpd -s

# Navigate mpd playlist
alt + x; m; {comma, period}
    mpc -q {prev, next}

##### Volume Control
#     pactl set-sink-volume 0 +5%
#     pactl set-sink-volume 0 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioLowerVolume
    amixer -D pulse sset Master 5%- unmute
XF86AudioRaiseVolume
    amixer -D pulse sset Master 5%+ unmute
XF86AudioMute
    amixer set Master toggle
ctrl + alt + {bracketleft, bracketright}
    amixer -D pulse sset Master 5%{-,+} unmute

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

#### Configs

# make sxhkd reload its configuration files:
super + ctrl + shift + s
    notify-send 'Reloading sxhkd configuration.';\
    pkill -USR1 -x sxhkd

# reload polybar
super + shift + ctrl + p
    killall polybar ; $HOME/.config/polybar/launch.sh &
    #notify-send 'Reloading polybar.';\

# reload notification system
super + shift + ctrl + d
    notify-send 'Reloading notification system.';\
    killall dunst; dunst &

# reload xresources
super + shift + ctrl + x
    notify-send 'Reloading xresources';\
    xrdb "/home/$(whoami)/.Xresources"

### bspwm hotkeys

# quit/restart bspwm
super + ctrl + shift + {q,r}
	notify-send 'Restarting bspwm.';\
	bspc {quit,wm -r}

super + shift + e
    bspc quit 1

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + shift + m
	bspc desktop -l next

alt + `
	bspc node -f next.local

super + Tab
	bspc node -f next

# focus to the given desktop
super + ctrl + {1-9}
	bspc desktop -f '^{1-9,9}'

#ctrl + space;  {1-9}
	#bspc desktop -f '^{1-9,9}'

super + 1
	bspc desktop -f '^6';\
	bspc desktop -f '^1'
super + 2
	bspc desktop -f '^7';\
	bspc desktop -f '^2'
super + 3
	bspc desktop -f '^8';\
	bspc desktop -f '^3'
super + 4
	bspc desktop -f '^9';\
	bspc desktop -f '^4'
super + 5
	bspc desktop -f '^5';\
	bspc desktop -f '^10'

super + {Left, Right}
    bspc monitor --focus {prev,next}

# select the direction
super + {h,j,k,l}
	bspc node -s {west,south,north,east}

####################
# System shortcuts #
####################

# Change window gap
ctrl + shift + {j,k}
    bspc config window_gap $((`bspc config window_gap` {+,-} 10 ))

# expand a window by moving one of its side outward
super + shift + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 20 0}

# contract a window by moving one of its side inward
shift + alt + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# rotate desktop
super + r
	bspc node @/ --rotate {90,-90}

# Circulate the leaves of the tree
super + {_,shift + }c
	bspc node @/ --circulate {backward,forward}

# Toogle pseudo tiling of window
super + shift + p
	bspc node --state \~pseudo_tiled

# Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# move focued widow to diffrent workspace
super + shift + {1-9}
    id=$(bspc query -N -n); bspc node -d ^{1-9}

super + shift + 0
    id=$(bspc query -N -n); bspc node -d 10

# move to other monitor
super + shift + {Left,Down,Up,Right}
	dir={west,south,north,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow

