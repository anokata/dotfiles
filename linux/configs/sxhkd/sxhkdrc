##### Rofi
#super + d
alt + d
  rofi-with-aliases

alt + w
  rofi -show window

ctrl + alt + d
  bash -i -c $(list-alias | rofi -dmenu)

# Show clipmenu
alt + v
    CM_LAUNCHER=rofi clipmenu \
        -location 1 \
        -m -3 \
        -no-show-icons \
        -theme-str '* \{ font: 10px; \}' \
        -theme-str 'listview \{ spacing: 0; \}' \
        -theme-str 'window \{ width: 20em; \}'

