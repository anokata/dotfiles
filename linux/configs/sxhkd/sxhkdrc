#### Configs
# Reload sxhkd configuration files
super + shift + ctrl + s
    notify-send 'Reloading sxhkd configuration.';\
    pkill -USR1 -x sxhkd

# Reload polybar
super + shift + ctrl + p
    killall polybar;\
    ~/.config/polybar/launch.sh &

# Reload notification system
super + shift + ctrl + d
    notify-send 'Reloading notification system.';\
    killall dunst; dunst &

# reload xresources
super + shift + ctrl + x
    notify-send 'Reloading xresources';\
    xrdb "/home/$(whoami)/.Xresources"

### bspwm hotkeys
# quit/restart bspwm
super + shift + ctrl + {q}
	notify-send 'Restarting bspwm.';\
	bspc {quit,wm -r}

super + shift + ctrl + {r}
	notify-send 'Reloading bspwm.';\
	bspc {wm -r}

super + shift + e
    bspc quit 1

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + shift + m
	bspc desktop -l next

alt + Tab
    bspc node -f next.local.window
	# bspc node -f next.local

super + {j, k}
    bspc node -f {next,prev}.local.window
	# bspc node -f next

super + {Left, Right}
    bspc monitor --focus {prev,next}
super + {h, l}
    bspc monitor --focus {prev,next}

# focus to the given desktop
super + {1-9}
	bspc desktop -f '^{1-9,9}'

##### System shortcuts #####
# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + alt + d
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# rotate desktop
super + ctrl + shift + j
    bspc node @parent -R 90
	# bspc node @/ --rotate {90,-90}

# Circulate the leaves of the tree
super + {_,shift + }c
	bspc node @/ --circulate {backward,forward}

# Toogle pseudo tiling of window
super + shift + p
	bspc node --state \~pseudo_tiled

# Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# move focued widow to diffrent workspace
super + shift + {1-9}
    id=$(bspc query -N -n); bspc node -d ^{1-9}

super + shift + 0
    id=$(bspc query -N -n); bspc node -d 10

# move to other monitor
super + shift + {Left,Down,Up,Right}
	dir={west,south,north,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow

super + shift + {h,l}
	dir={west,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow


alt + F2
    ~/dotfiles/linux/bin/toggle-kitty

ctrl + shift + alt + w
    ~/dotfiles/linux/bin/life/wake
