# Applications
alt + Return
    xrdb "/home/$(whoami)/.Xresources"; terminal

ctrl + alt + t
    gnome-terminal


ctrl + shift + F1
    google-chrome

ctrl + shift + F2
    obsidian

ctrl + shift + F12
  ~/dotfiles/linux/bin/timer

ctrl + F12
  ~/dotfiles/linux/bin/screenshot-area

alt + F12
  screenshot-all

ctrl + shift + super + F12
    screenshot-all-media

super + F12
    screenshot-all-media

ctrl + super + F11
    clipboard-path-load-image

ctrl + alt + d
  dmenu_run

alt + d
  rofi -show run

super + ctrl + 9
  pacmd set-default-sink 0

ctrl + super + 0
  pacmd set-default-sink 1

ctrl + super + 8
  pacmd set-default-sink 2

ctrl + super + 7
  pacmd set-default-sink 3


# make sxhkd reload its configuration files:
super + ctrl + shift + s
    notify-send 'Reloading sxhkd configuration.';\
    pkill -USR1 -x sxhkd

# reload polybar
super + shift + ctrl + p
    killall polybar ; polybar bottom &
    #notify-send 'Reloading polybar.';\

# reload notification system
super + shift + ctrl + d
    notify-send 'Reloading notification system.';\
    killall dunst; dunst &

# reload xresources
super + shift + ctrl + x
    notify-send 'Reloading xresources';\
    xrdb "/home/$(whoami)/.Xresources"


#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + shift + {q,b}
	notify-send 'Restarting bspwm.';\
	bspc {quit,wm -r}

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + shift + m
	bspc desktop -l next

#alt + Tab
	#bspc node -f next.local

# focus to the given desktop
super + {1-9}
	bspc desktop -f '^{1-9,9}'

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

####################
# System shortcuts #
####################

# Change window gap
ctrl + shift + {j,k}
    bspc config window_gap $((`bspc config window_gap` {+,-} 10 ))

# expand a window by moving one of its side outward
super + shift + {h,j,k,l}
	bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 20 0}

# contract a window by moving one of its side inward
shift + alt + {h,j,k,l}
	bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# rotate desktop
super + r
	bspc node @/ --rotate {90,-90}

# Circulate the leaves of the tree
super + {_,shift + }c
	bspc node @/ --circulate {backward,forward}

# Toogle pseudo tiling of window
super + shift + p
	bspc node --state \~pseudo_tiled

# Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# move focued widow to diffrent workspace
super + shift + {1-9}
    id=$(bspc query -N -n); bspc node -d ^{1-9}

super + shift + 0
    id=$(bspc query -N -n); bspc node -d 10

