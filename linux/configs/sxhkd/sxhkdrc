####################
# System shortcuts #
####################
# Change window gap
# ctrl + shift + {j,k}
#     bspc config window_gap $((`bspc config window_gap` {+,-} 10 ))
# expand a window by moving one of its side outward
#super + shift + {h,j,k,l}
	#bspc node -z {left -10 0,bottom 0 10,top 0 -10,right 20 0}
# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + alt + d
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# rotate desktop
super + ctrl + shift + j
    bspc node @parent -R 90
	# bspc node @/ --rotate {90,-90}

# bspc node -z {right -10 0,top 0 10,bottom 0 -10,left 10 0}

# Circulate the leaves of the tree
super + {_,shift + }c
	bspc node @/ --circulate {backward,forward}

# Toogle pseudo tiling of window
super + shift + p
	bspc node --state \~pseudo_tiled

# Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# move focued widow to diffrent workspace
super + shift + {1-9}
    id=$(bspc query -N -n); bspc node -d ^{1-9}

super + shift + 0
    id=$(bspc query -N -n); bspc node -d 10

# move to other monitor
super + shift + {Left,Down,Up,Right}
	dir={west,south,north,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow

super + shift + {h,l}
	dir={west,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow

