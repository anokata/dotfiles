#! /bin/sh

pidof sxhkd >/dev/null || (nohup sxhkd >/dev/null 2>&1 & disown)
setxkbmap -option caps:escape
dunst &
[ ! -s ~/.config/mpd/pid ] && mpd
xrdb "/home/$(whoami)/.Xresources"
nm-applet &
dropbox start &
$HOME/.config/polybar/launch.sh
pidof kitty >/dev/null & kitty
#pidof st >/dev/null &
# pidof obsidian >/dev/null || obsidian &
pidof chrome >/dev/null || google-chrome &
xsetroot -solid "#202020"

bspc monitor HDMI-1 -d 1 2 3 4 5
bspc monitor DP-3 -d 6 7 8 9 10

bspc config border_width         0
bspc config window_gap           0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a google-chrome desktop='^1'
bspc rule -a urxvt desktop='^5'
bspc rule -a kitty desktop='^4'
bspc rule -a st desktop='^4'
bspc rule -a Nautilus desktop='^2'
bspc rule -a thunar desktop='^2'
bspc rule -a Code desktop='^2'
bspc rule -a Slack desktop='^3'
bspc rule -a Telegram desktop='^8'
bspc rule -a obsidian desktop='^8'
bspc rule -a obs desktop='^8'
bspc rule -a Audacious desktop='^9'
bspc rule -a Transmission-gtk desktop='^10'
bspc rule -a Transmission-gtk desktop='^10'
bspc rule -a Guake state=floating
bspc rule -a guake state=floating

#  state=floating follow=on focus=on manage=off
