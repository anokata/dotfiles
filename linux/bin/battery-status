#!/bin/bash

trim() {
    local var="$*"
    # remove leading whitespace characters
    var="${var#"${var%%[![:space:]]*}"}"
    # remove trailing whitespace characters
    var="${var%"${var##*[![:space:]]}"}"
    printf '%s' "$var"
}

POWER=`upower -i $(upower -e | grep BAT) | grep --color=never -E "percentage" | cut -d":" -f 2`
trim $POWER
 
